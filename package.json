{
  "name": "@sondr3/frontend-config",
  "private": true,
  "version": "1.0.0",
  "description": "ESLint, Prettier and StyleLint configs for me",
  "main": "index.js",
  "repository": "https://github.com/sondr3/eslint-config-sondr3",
  "author": "Sondre Nilsen <nilsen.sondre@gmail.com>",
  "license": "MIT",
  "keywords": [
    "eslint",
    "eslint-config"
  ],
  "files": [
    "index.js",
    "react.js",
    "stylelint.js",
    "tsconfig.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap"
  },
  "devDependencies": {
    "husky": "^2.2.0",
    "lerna": "^3.14.1",
    "lint-staged": "^8.1.7"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": ">= 1.0.0 < 2",
    "@typescript-eslint/parser": ">= 1.0.0 < 2",
    "eslint": ">= 5.0.0 < 6",
    "eslint-config-airbnb": ">= 17.0.0 < 18",
    "eslint-config-prettier": ">= 4.0.0 < 18",
    "eslint-plugin-import": ">= 2.0.0 < 3",
    "eslint-plugin-jsx-a11y": ">= 6.0.0 < 6",
    "eslint-plugin-prettier": ">= 3.0.0 < 4",
    "eslint-plugin-react": "> =7.0.0 < 8",
    "eslint-plugin-react-hooks": ">= 1.0.0 < 2",
    "prettier": ">= 1.0.0 < 2",
    "stylelint": ">= 10.0.0 < 11",
    "stylelint-a11y": ">= 1.0.0 < 2",
    "stylelint-config-prettier": ">= 5.0.0 < 6",
    "stylelint-config-recommended": ">= 2.0.0 < 3",
    "stylelint-order": ">= 3.0.0 < 4",
    "stylelint-prettier": ">= 1.0.0 < 2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
