{
  "name": "@sondr3/frontend-config",
  "private": true,
  "version": "1.0.0",
  "description": "My shared configuration files",
  "repository": "https://github.com/sondr3/frontend-config",
  "author": "Sondre Nilsen <nilsen.sondre@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "style": "prettier --check *.{js,json,md} packages/**/*.{js,json}",
    "style:fix": "prettier --write *.{js,json,md} packages/**/*.{js,json}",
    "ci:publish": "lerna publish --yes"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@commitlint/config-lerna-scopes": "11.0.0",
    "@sondr3/eslint-config-javascript": "^0.4.0",
    "@sondr3/prettier": "^0.2.0",
    "eslint": "7.12.0",
    "husky": "4.3.0",
    "lerna": "3.22.1",
    "lint-staged": "10.4.2",
    "prettier": "2.1.2",
    "typescript": "4.0.3"
  },
  "prettier": "@sondr3/prettier",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
