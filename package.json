{
  "name": "@sondr3/frontend-config",
  "private": true,
  "version": "1.0.0",
  "description": "My shared configuration files",
  "repository": "https://github.com/sondr3/frontend-config",
  "author": "Sondre Nilsen <nilsen.sondre@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "style": "prettier --check *.{js,json,md} packages/**/*.{js,json}",
    "style:fix": "prettier --write *.{js,json,md} packages/**/*.{js,json}",
    "ci:publish": "lerna publish --yes"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/config-lerna-scopes": "^8.3.4",
    "@sondr3/eslint-config-javascript": "^0.3.0",
    "@sondr3/prettier": "^0.2.0",
    "eslint": "^7.0.0",
    "husky": "^4.2.5",
    "lerna": "^3.21.0",
    "lint-staged": "^10.2.4",
    "prettier": "^2.0.5",
    "typescript": "^3.9.2"
  },
  "prettier": "@sondr3/prettier",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
