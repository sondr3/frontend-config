{
  "name": "@sondr3/frontend-config",
  "private": true,
  "version": "1.0.0",
  "description": "ESLint, Prettier and StyleLint configs for me",
  "main": "index.js",
  "repository": "https://github.com/sondr3/frontend-config",
  "author": "Sondre Nilsen <nilsen.sondre@gmail.com>",
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@sondr3/eslint-config-me": "^0.1.2",
    "eslint": "^5.16.0",
    "husky": "^2.2.0",
    "lerna": "^3.14.1",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "typescript": "^3.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
