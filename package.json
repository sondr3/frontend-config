{
  "name": "@sondr3/frontend-config",
  "private": true,
  "version": "1.0.0",
  "description": "My shared configuration files",
  "repository": "https://github.com/sondr3/frontend-config",
  "author": "Sondre Nilsen <nilsen.sondre@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "style": "prettier --check *.{js,json,md} packages/**/*.{js.json.md}",
    "style:fix": "prettier --write *.{js,json,md} packages/**/*.{js.json.md}",
    "ci:publish": "lerna publish --yes"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/config-lerna-scopes": "^8.3.4",
    "@sondr3/eslint-config-javascript": "^0.2.3",
    "@sondr3/prettier": "^0.1.1",
    "eslint": "^6.8.0",
    "husky": "^4.0.10",
    "lerna": "^3.20.2",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "typescript": "^3.7.4"
  },
  "prettier": "@sondr3/prettier",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
