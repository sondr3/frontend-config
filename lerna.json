{
  "version": "independent",
  "lerna": "3.13.1",
  "packages": ["packages/*"],
  "npmClient": "npm",
  "useWorkspaces": true,
  "command": {
    "version": {
      "conventionalCommits": true,
      "exact": true,
      "message": "chore(release): publish",
      "noGitTagVersion": true,
      "noPush": true,
      "ignoreChanges": ["**/*.md", "**/package-lock.json", "lerna.json"]
    },
    "publish": {
      "message": "chore(release): publish",
      "noGitTagVersion": true,
      "noPush": true
    }
  }
}
