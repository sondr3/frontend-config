{
  "version": "independent",
  "lerna": "3.13.1",
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "conventionalCommits": true,
      "exact": true,
      "message": "chore(release): publish",
      "createRelease": "github",
      "ignoreChanges": ["**/*.md"]
    }
  }
}
